@model Mynotes.ViewModels.NoteViewModel

@{
    ViewData["Title"] = "Create Note";
}
<div class ="row">
<div class ="col-8 mx-auto">
<div class = "row d-flex align-items-center">
    <div class ="col-8">
    <h1 class="mt-2">Edit  Note</h1>
    </div>
    <div class="col-4">
    <a class ="btn btn-success"form-control asp-action="Index">Go Back </a>
    </div>

<hr/>
<form asp-action = "Create" asp-Controller= "Note" method = "post">
            <div class="mb-3">
                <label asp-for="Title"></label>
                <input type="text" asp-for="Title" class="form-control" />
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description"></label>
                <textarea asp-for ="Description" asp-for="Password" class="form-control rows= 20" ></textarea>
                <span class="text-danger" asp-validation-for="Description "></span>
            </div>
            <div class="mb-3"> 
            <div class = "d-flex align-items-center justigy-content-center gap-3">
                <label> Choose Background Color </label>
                <input type = "color" asp-for = "Color">
                </div>
           
            </div>
            <div class="mb-3">
                <input type="submit" class="form-control btn btn-success"value = "Save">
            </div>
        </form>
</div>
</div>


