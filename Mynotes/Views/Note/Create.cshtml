@model  Mynotes.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Create Note";
}
<div class ="row">
<div class ="col-8 mx-auto">
<h1 class =" mt-2">Create Note</h1>
<hr/>
<form >
            <div class="mb-3">
                <label asp-for="Title"></label>
                <input type="text" asp-for="Title" class="form-control" />
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description"></label>
                <textarea asp-for="Description"  class="form-control" rows = "20" ></textarea>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="mb-3">
            <div class ="d-flex align-items-center justify-content-center gap-3">
                <label> Choose Background Colour </label>
                    <input type="color" asp-for="Color" />
                    
                </div>
                <span class="text-danger" asp-validation-for="RememberMe"></span>
            </div>
            <div class="mb-3">
                <input type="submit" class=" form-control btn btn-success" value = "Save">
            </div>
        </form>
</div>
