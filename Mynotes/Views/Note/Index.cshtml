@model List<Note>
@{
    ViewData["Title"] = "List of Notes";
}
<div class="row">
    <div class="col-12 mx-auto">
        <h1 class="mt-2">List of Notes</h1>
        <hr/>
        <div class="row">
            @foreach (var note in Model)
            {
                <div class="col-4">
                    <div class="p-3 text-white rounded-2 my-2" style="background-color:@note.Color;">
                        <h2>@note.Title</h2>
                        <hr>
                        <p>@note.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
